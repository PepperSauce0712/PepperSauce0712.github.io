---
import link from "../content/global.json";
const { social, cls } = Astro.props;
let icon;

if (social === "ig") icon = "fi fi-brands-instagram " + cls;
if (social === "dc") icon = "fi fi-brands-discord " + cls;
if (social === "github") icon = "fi fi-brands-github " + cls;
---
<button class={social}>
    <i style="color:#717171;" class={icon}></i>
</button>

<script define:vars={{social, link}}>
    const buttons = document.querySelectorAll("button." + social);

    buttons.forEach((button) => {
        button.addEventListener("click", () => {
            window.open(link["link"][social], "_blank");
        });
    });
</script>