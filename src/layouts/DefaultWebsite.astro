---
import Pfooter from "../components/Pfooter.astro";
import Pheader from "../components/Pheader.astro";
import link from "../content/global.json";

---
<html lang="en">
	<head>
		<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-brands/css/uicons-brands.css'>
		<link rel="icon" href="/public/images/favicon.ico">
	</head>
	<body class="flex flex-col min-h-screen">
		<Pheader/>
		<div class="flex flex-col items-center min-h-screen">
			<slot></slot>
        </div>
		<Pfooter/>
	</body>
	<style>
		body {
  		  background-color: #080808;
  		  background-image: 
    	  linear-gradient(to right, rgba(130, 130, 130, 0.1) 0.5px, transparent 1px),
    	  linear-gradient(to bottom, rgba(130, 130, 130, 0.1) 0.5px, transparent 1px);
  	      background-size: 35px 35px; /* 網格大小 */
		}
	</style>
	
	<script define:vars={{link}}>
    	const ig_buttons = document.querySelectorAll("button.ig");
		const dc_buttons = document.querySelectorAll("button.dc");
		const github_buttons = document.querySelectorAll("button.github");
    	ig_buttons.forEach((button) => {
        	button.addEventListener("click", () => {
            	window.open(link["link"]["ig"], "_blank");
        	});
    	});
		dc_buttons.forEach((button) => {
        	button.addEventListener("click", () => {
            	window.open(link["link"]["dc"], "_blank");
        	});
    	});
		github_buttons.forEach((button) => {
        	button.addEventListener("click", () => {
            	window.open(link["link"]["github"], "_blank");
        	});
    	});
	</script>
</html>