---
const { frontmatter } = Astro.props;
---
<html lang="en">
	<head>
		<title>PepperSauce | {frontmatter.title}</title>
		<link rel="icon" href="/PepperWebsite/images/favicon.ico">
	</head>
	<body>
		<div class="flex flex-col justify-center items-center">
			<div class="h-24"></div>
			<h1 class="text-3xl text-white">{frontmatter.title}</h1>
			<text class="text-lg text-white">{frontmatter.pubDate.toString().slice(0, 10)}</text>
			<text class="text-3xl text-white">{frontmatter.description}</text>
			<slot/>
		</div>
	</body>
	<style>
		body {
  		  background-color: #090909;
  		  background-image: 
    	  linear-gradient(to right, rgba(130, 130, 130, 0.1) 0.5px, transparent 1px),
    	  linear-gradient(to bottom, rgba(130, 130, 130, 0.1) 0.5px, transparent 1px);
  	      background-size: 35px 35px; /* 網格大小 */
		}
	</style>
</html>
